<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingHorizontal="40dp">

    <TextView
        android:id="@+id/channelsTopicTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/channels_topic_text"
        android:textColor="@color/channels_topic_text"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/channelsTopicMessagesCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Testing " />

    <TextView
        android:id="@+id/channelsTopicMessagesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/channels_topic_text"
        android:textColor="@color/channels_topic_text"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/channelsTopicTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1240 mes"/>

</androidx.constraintlayout.widget.ConstraintLayout>