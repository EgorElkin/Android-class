<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZulipApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_common</item>
        <item name="colorPrimaryVariant">@color/background_gray_dark</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationStyle</item>
        <item name="tabStyle">@style/CustomTabLayoutStyle</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="CustomBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/navigation_background</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
    </style>

    <!--    Tab Layout Style-->
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/channels_tabs_text</item>
        <item name="tabIndicatorColor">@color/channels_tabs_underline</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <!-- Bottom Sheet Dialog Style -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>